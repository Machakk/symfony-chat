{% extends "base.html.twig" %}

{% block title %} Message {% endblock %}

{% block body %}
<section class="container">
    <div class="row">
        <div class="col">
            <h1>Message</h1>
            <p>Description chat</p>
            <p>Received: {{ app.user.received|length }}</p>
            <p>Sent: {{ app.user.sent|length }}</p>
            <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                aria-controls="offcanvasExample">
                My files
            </a>
            <a href="" class="btn btn-primary">Send a message</a>
        </div>
    </div>
</section>
<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
        <h2 class="offcanvas-title" id="offcanvasExampleLabel">Files</h2>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="list-group">
            <a href="{{ path("messages") }}" class="list-group-item list-group-item-action active">Home</a>
        </div>
        <div class="list-group">
            <a href="{{ path("messages") }}" class="list-group-item list-group-item-action">Inbox</a>
        </div>
        <div class="list-group">
            <a href="{{ path("messages") }}" class="list-group-item list-group-item-action">Sent</a>
        </div>
    </div>
</div>
{% endblock %}